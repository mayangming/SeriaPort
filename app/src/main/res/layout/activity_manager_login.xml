<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ManagerLoginActivity">

    <ImageView
        android:id="@+id/back_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:src="@mipmap/back_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/app_logo"
        android:background="@drawable/app_logo_bg"
        android:layout_marginTop="220dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/color_0C0C0C"
        android:layout_marginTop="14dp"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/app_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/admin_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="205dp"
        android:paddingHorizontal="33dp"
        android:paddingVertical="10dp"
        android:background="@drawable/input_border_19bd9c"
        app:layout_constraintTop_toBottomOf="@+id/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/admin_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:textColor="@color/color_4d4d4d"
            android:textSize="28sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="47.7dp"
            android:layout_marginHorizontal="30dp"
            android:background="@color/color_19BD9C"/>
        <EditText
            android:id="@+id/admin_account_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入账号"
            android:background="@null"
            android:textColorHint="@color/color_999"
            android:maxLines="1"
            android:textSize="28sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/admin_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="52dp"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="33dp"
        android:background="@drawable/input_border_19bd9c"
        app:layout_constraintTop_toBottomOf="@+id/admin_account_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/admin_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textColor="@color/color_4d4d4d"
            android:textSize="28sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="47.7dp"
            android:layout_marginHorizontal="30dp"
            android:background="@color/color_19BD9C"/>
        <EditText
            android:id="@+id/admin_pwd_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:background="@null"
            android:maxLines="1"
            android:textColorHint="@color/color_999"
            android:textSize="28sp"
            android:inputType="textPassword"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/admin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:src="@mipmap/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_pwd_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>