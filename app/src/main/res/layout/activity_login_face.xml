<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_50_black"
    tools:context=".activity.LoginByFaceActivity">
    <ImageView
        android:id="@+id/back_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:src="@mipmap/back_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/choose_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择图片"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/add_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/choose_vip"
        android:text="添加VIP"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_white"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/face_container"/>
    <FrameLayout
        android:id="@+id/face_container"
        android:layout_width="557.8dp"
        android:layout_height="836.7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <SurfaceView
            android:id="@+id/surfaceViewCamera"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </SurfaceView>

        <com.machine.serialport.view.FaceCanvasView
            android:id="@+id/canvasview_draw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>