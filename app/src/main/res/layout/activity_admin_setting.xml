<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="79dp"
    android:background="@color/white"
    tools:context=".activity.AdminSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:src="@mipmap/back_green" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/add_vip"
        android:layout_width="360dp"
        android:layout_height="538dp"
        android:src="@mipmap/default_vip_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/add_vip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基础信息"
            android:textSize="18sp"
            android:textColor="@color/color_292929"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/name_edt"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_border"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@+id/form_title"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="18sp"
            android:textColor="@color/color_292929"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toStartOf="@+id/name_edt"
            app:layout_constraintTop_toTopOf="@+id/name_edt"
            app:layout_constraintBottom_toBottomOf="@+id/name_edt"/>
        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_border"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@+id/name_edt"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="18sp"
            android:textColor="@color/color_292929"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toStartOf="@+id/phone_edt"
            app:layout_constraintTop_toTopOf="@+id/phone_edt"
            app:layout_constraintBottom_toBottomOf="@+id/phone_edt"/>
        <EditText
            android:id="@+id/position_edt"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_border"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_edt"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"
            android:textSize="18sp"
            android:textColor="@color/color_292929"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toStartOf="@+id/position_edt"
            app:layout_constraintTop_toTopOf="@+id/position_edt"
            app:layout_constraintBottom_toBottomOf="@+id/position_edt"/>

        <EditText
            android:id="@+id/device_location"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input_border"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:editable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintTop_toBottomOf="@+id/position_edt"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备位置"
            android:textSize="18sp"
            android:textColor="@color/color_292929"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toStartOf="@+id/device_location"
            app:layout_constraintTop_toTopOf="@+id/device_location"
            app:layout_constraintBottom_toBottomOf="@+id/device_location"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="18sp"
            android:background="@drawable/button_19bd9c"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:paddingHorizontal="50dp"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/device_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>